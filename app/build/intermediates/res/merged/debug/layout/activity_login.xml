<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:layout_weight="38"
            android:background="#fff">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="vertical"
            android:background="@drawable/rectangle5"
            android:layout_weight="62">
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="30sp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="-8sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:entries="@array/language_arrays"
            android:popupBackground="#80ffffff"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:src="@drawable/ic_dropdown"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35sp"
            android:layout_marginEnd="35sp"
            android:layout_marginTop="22sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="vertical"
            android:layout_weight="9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130sp"
                    android:layout_marginRight="130sp"
                    android:layout_marginBottom="30sp"
                    android:adjustViewBounds="true"
                    android:layout_above="@+id/login_form"
                    android:src="@drawable/logo2" />

                <RelativeLayout
                    android:id="@+id/login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="-25sp"
                    android:layout_centerVertical="true">

<!--                    <View-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="100sp"-->
<!--                        android:layout_marginLeft="55sp"-->
<!--                        android:layout_marginRight="55sp"-->
<!--                        android:layout_marginTop="8sp"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        android:background="@drawable/rectangle_login"/>-->

<!--                    <View-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="100sp"-->
<!--                        android:layout_marginLeft="40sp"-->
<!--                        android:layout_marginRight="40sp"-->
<!--                        android:layout_marginTop="18sp"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        android:background="@drawable/rectangle_login"/>-->

<!--                    <ImageView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        android:src="@drawable/bg_login_1"/>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rectangle2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="70sp"
                            android:layout_marginLeft="50sp"
                            android:layout_marginRight="50sp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14sp"
                                android:layout_marginStart="8sp"
                                android:layout_marginBottom="10sp"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#018D46"
                                android:text="Xin chào,"/>

                            <EditText
                                android:id="@+id/et_username"
                                android:layout_width="match_parent"
                                android:layout_height="44sp"
                                android:layout_margin="8sp"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:hint="Tên đăng nhập"
                                android:drawableLeft="@drawable/ic_user"
                                android:textSize="14sp"/>


                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="44sp"
                                android:layout_margin="8sp"
                                android:singleLine="true"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:drawableLeft="@drawable/ic_lock"
                                android:textSize="14sp"
                                android:hint="Mật khẩu"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center">

                                <Button
                                    android:id="@+id/btn_enter"
                                    android:layout_width="140dp"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/rectangle3"
                                    android:layout_marginRight="20dp"
                                    android:textColor="#fff"
                                    android:text="Đăng nhập"/>

                                <ImageButton
                                    android:id="@+id/btn_finger"
                                    android:layout_width="45sp"
                                    android:layout_height="45sp"
                                    android:layout_gravity="center"
                                    android:background="#00ffffff"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_finger_2"/>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15sp"
                            android:textSize="12sp"
                            android:textColor="#929292"
                            android:text="Không thể đăng nhập?"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="40sp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30sp"
                                    android:layout_height="30sp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_heart_box"/>

                                <TextView
                                    android:layout_width="80sp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center"
                                    android:textSize="13sp"
                                    android:textStyle="normal"
                                    android:textColor="#01391D"
                                    android:text="Ưu Đãi Khuyến Mãi"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="#40afafaf"/>

                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30sp"
                                    android:layout_height="30sp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_location"/>

                                <TextView
                                    android:layout_width="80sp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center"
                                    android:textSize="13sp"
                                    android:textStyle="normal"
                                    android:textColor="#01391D"
                                    android:text="ATM Chi Nhánh "/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>


